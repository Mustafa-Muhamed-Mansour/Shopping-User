<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirm.ConfirmFragment"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_profile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/ic_user_profile"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="invisible"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تكلفة الطلب"
            android:textSize="@dimen/_23ssp"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your name"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/edit_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your number"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:inputType="phone"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your address"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:inputType="text"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/edit_building_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your building number"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:inputType="number"
            android:drawableStart="@drawable/ic_building"
            android:drawablePadding="@dimen/_5sdp"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="invisible"
            >

            <RadioButton
                android:id="@+id/radio_pay_when_receiving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الدفع عند الاستلام"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_cash_payment"
                android:drawablePadding="@dimen/_5sdp"
                />

            <RadioButton
                android:id="@+id/radio_pay_use_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الدفع باستخدام الكارت"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:drawableEnd="@drawable/ic_debit_card"
                android:drawablePadding="@dimen/_5sdp"
                />



        </RadioGroup>

        <Button
            android:id="@+id/btn_done_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_button_add_to_cart"
            android:padding="@dimen/_10sdp"
            android:text="تاكيد الطلب"
            android:textColor="#F69903"
            android:textSize="@dimen/_17ssp"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>